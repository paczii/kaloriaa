<% provide(:title, 'Registrieren') %>
<h1>Neuer Account</h1>

<div class="row" style="margin-bottom: 80px;">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label "Account Name", style: 'text-transform:capitalize' %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label "E-Mail" %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label "Passwort" %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Passwort bestÃ¤tigen" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.label "Fahrer Account?", style: 'text-transform:capitalize' %>
        <%= f.check_box :driver %>

        <div style="margin-bottom: 30px"></div>
        <%= f.submit "Account erstellen", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
