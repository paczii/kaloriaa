<h1>Liste aller Beiträge</h1>

<table class="table">
  <tr>
    <th>Erstellt</th>
    <th>Bearbeitet</th>
    <th>Inhalt</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @microposts.each do |micropost| %>
  <tr>
    <td><%= micropost.created_at.to_date %></td>
    <td><%= micropost.updated_at.to_date %></td>
    <td><%= micropost.content %></td>
    <td><%= link_to 'Zeigen', micropost %></td>
    <td><%= link_to 'Ändern', edit_micropost_path(micropost) %></td>
    <td><%= link_to 'Löschen', micropost, method: :delete, data: { confirm: 'Sind Sie sicher?' } %></td>
  </tr>
<% end %>
</table>

<br />

