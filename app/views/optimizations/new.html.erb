      <div style="margin-bottom: 100px"></div>
  <% end %>

</div>

<!-- PICK UP FORM END -->


  </div>

    <h1 style="padding-top: -500px; display: none" id="backbutton" >
      <div onclick="return back()" class="btn btn-success" style="max-width: 200px" > Zurück </div>
    </h1>




<script>

  function showNotice(id){

    if (id == 3){
    document.getElementById("selectionsection").style.display = "none";
    document.getElementById("formfordelivery").style.display = "block";
      document.getElementById("backbutton").style.display = "block";

    }

    if (id == 2){
      document.getElementById("selectionsection").style.display = "none";
      document.getElementById("formforpickup").style.display = "block";
      document.getElementById("backbutton").style.display = "block";

    }

    if (id == 1){
      document.getElementById("selectionsection").style.display = "none";
      document.getElementById("formforrealcase").style.display = "block";
      document.getElementById("backbutton").style.display = "block";

    }

  }

  function showWait() {
    document.getElementById("sel").style.display = "none";
    document.getElementById("pleasewait").style.display = "block";

  }

  function back() {
    document.getElementById("selectionsection").style.display = "block";
    document.getElementById("formfordelivery").style.display = "none";
    document.getElementById("formforpickup").style.display = "none";
    document.getElementById("formforrealcase").style.display = "none";
    document.getElementById("backbutton").style.display = "none";

  }

</script>



    <% end %>
