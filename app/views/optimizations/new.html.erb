<!-- PICK UP FORM  -->
<div id="formfordelivery" style="display: none;">



  <%= bootstrap_form_for(@optimization, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-6") do |f| %>

      <%= f.hidden_field :optimizationtype, value: 3, required: true %>

      <br>


