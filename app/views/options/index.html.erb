<!--   ZEITEN ENDE   -->
<h1 style="padding-top: -500px;">
<div onclick="return showOptions(0)" class="btn btn-success" style="max-width: 200px" > Zurück </div>
</h1>

<script>

  function showOptions(id){

    if (id == 0) {
      document.getElementById("overview").style.display = "block";
      document.getElementById("boxes").style.display = "none";
      document.getElementById("gams").style.display = "none";
      document.getElementById("costs").style.display = "none";
      document.getElementById("times").style.display = "none";
      document.getElementById("box").style.display = "none";
      document.getElementById("coolingbox").style.display = "none";
      document.getElementById("freezingbox").style.display = "none";
      document.getElementById("hourcosts").style.display = "none";
      document.getElementById("drivingcosts").style.display = "none";
      document.getElementById("cartcosts").style.display = "none";
      document.getElementById("timeperproduct").style.display = "none";
      document.getElementById("servicetime").style.display = "none";
      document.getElementById("timewindows").style.display = "none";
      document.getElementById("gamsoverview").style.display = "none";
      document.getElementById("gamsstatus").style.display = "none";
      document.getElementById("emissions").style.display = "none";

    }

    /* Von Schicht 1 zu Schicht 2 */
    if (id == 1) {
      document.getElementById("overview").style.display = "none";
      document.getElementById("boxes").style.display = "block";
    }
    if (id == 2) {
      document.getElementById("overview").style.display = "none";
      document.getElementById("gamsoverview").style.display = "block";
    }
    if (id == 3) {
      document.getElementById("overview").style.display = "none";
      document.getElementById("costs").style.display = "block";
    }
    if (id == 4) {
      document.getElementById("overview").style.display = "none";
      document.getElementById("times").style.display = "block";
    }


    /* Von Schicht 2 (Boxen) zum Form für die jeweilige Box */
    if (id == 5) {
      document.getElementById("boxes").style.display = "none";
      document.getElementById("box").style.display = "block";
    }
    if (id == 6) {
      document.getElementById("boxes").style.display = "none";
      document.getElementById("coolingbox").style.display = "block";
    }
    if (id == 7) {
      document.getElementById("boxes").style.display = "none";
      document.getElementById("freezingbox").style.display = "block";
    }

    /* Von Schicht 2 (Kosten) zum Form für die jeweiligen Kosten */
    if (id == 8) {
      document.getElementById("costs").style.display = "none";
      document.getElementById("hourcosts").style.display = "block";
    }
    if (id == 9) {
      document.getElementById("costs").style.display = "none";
      document.getElementById("drivingcosts").style.display = "block";
    }
    if (id == 10) {
      document.getElementById("costs").style.display = "none";
      document.getElementById("cartcosts").style.display = "block";
    }
    if (id == 16) {
      document.getElementById("costs").style.display = "none";
      document.getElementById("emissions").style.display = "block";
    }

    /* Von Schicht 2 (Zeiten) zum Form für die jeweilige Zeit */
    if (id == 11) {
      document.getElementById("times").style.display = "none";
      document.getElementById("timeperproduct").style.display = "block";
    }
    if (id == 12) {
      document.getElementById("times").style.display = "none";
      document.getElementById("servicetime").style.display = "block";
    }
    if (id == 13) {
      document.getElementById("times").style.display = "none";
      document.getElementById("timewindows").style.display = "block";
    }

    /* Von Schicht 2 (GAMS) zur GAMS Option*/
    if (id == 14) {
      document.getElementById("gamsoverview").style.display = "none";
      document.getElementById("gams").style.display = "block";
    }
    if (id == 15) {
      document.getElementById("gamsoverview").style.display = "none";
      document.getElementById("gamsstatus").style.display = "block";
    }


  }
</script>







