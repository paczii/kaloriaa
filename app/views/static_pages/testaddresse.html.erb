<h1>Adresse testen (Für Hannover) </h1>

<% @distance = Option.new %>


<%= bootstrap_form_for(@distance, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-6") do |f| %>



    <%= f.number_field :name, label: "PLZ", required: true %>
    <%= f.text_field :value, label: "Straße", required: true %>


    <br>

    <%= f.form_group do %>
        <h1 > <%= f.submit "Testen", class: "btn btn-success" %></h1>
        <h6 style="margin-top: -20px;">Alle Felder müssen ausgefüllt werden.</h6>


    <% end %>

    <div style="margin-bottom: 100px"></div>
<% end %>

